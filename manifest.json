{
  "name": "Base Converter",
  "description": "Converts from Source base, to Target base.",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "permissions": ["contextMenus","activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "manifest_version": 2
}